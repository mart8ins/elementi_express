<% layout("/layout/boilerplate.ejs") %>
    <link rel="stylesheet" href="/css/user.css">

    <div class="back_to_products bg-dark bg-gradient shadow-lg">
        <a href="/user/<%= loggedUser._id %>/profile "><button
                class="p-1 btn btn-outline-info btn-sm"><span>&#8592;</span> Uz profilu</button></a>
    </div>

    <div class="container">
        <div class="row">
            <div class="card col-4 offset-4">
                <div class="card-body user_profile_edit_profile_img">
                    <h5 class="card-title">
                        Edit <%= loggedUser.username %>`s profile
                    </h5>
                    <img class="card-img-top" src="/images/no_user.png" alt="Card image cap"
                        style="width: 200px">
                </div>
                <form action="/user/<%= loggedUser._id %>/profile" method="post"
                    class="needs-validation text-muted" novalidate>
                    <% if(username_error) {%>
                        <p class="taken_username_email_error">
                            Username already is taken by other user!
                        </p>
                        <% } %>
                            <% if(email_error) {%>
                                <p class="taken_username_email_error">
                                    Email already is taken by other user!
                                </p>
                                <% } %>
                                    <ul class="list-group list-group-flush">

                                        <div class="list-group-item">
                                            <label for="username">Profile username</label>
                                            <input type="text" name="username" id="username" class="form-control"
                                                value="<%= loggedUser.username %>"
                                                required>
                                        </div>

                                        <div class="list-group-item">
                                            <label for="firstName">First name</label>
                                            <input type="text" name="firstName" id="firstName" class="form-control"
                                                value="<%= loggedUser.delivery.firstName %>">
                                        </div>
                                        <div class="list-group-item">
                                            <label for="lastName">Last name</label>
                                            <input type="text" name="lastName" id="lastName" class="form-control"
                                                value="<%= loggedUser.delivery.lastName %>">
                                        </div>

                                        <div class="list-group-item">
                                            <label for="email">e-mail</label>
                                            <input type="email" name="email" id="email" class="form-control"
                                                value="<%= loggedUser.email %>"
                                                required>
                                        </div>

                                        <div class="list-group-item">
                                            <label for="address">Address</label>
                                            <input type="text" name="address" id="address" class="form-control"
                                                value="<%= loggedUser.delivery.address %>">
                                        </div>

                                        <div class="list-group-item">
                                            <label for="phone">Phone</label>
                                            <input type="text" name="phone" id="phone" class="form-control"
                                                value="<%= loggedUser.delivery.phone %>">
                                        </div>
                                    </ul>
                                    <div class="card-body">
                                        <button class="btn btn-secondary">Save</button>
                                    </div>
                </form>
            </div>
        </div>
    </div>